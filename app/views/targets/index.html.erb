<section>
  <div id="targets-index">
    <div class="container-fluid">
      <br><br><br><br><br>
      <div class="col-sm-5">
        <h1 class="display-3">Targets</h1>
        <%= link_to "New target", "targets/" + current_user.id.to_s + "/new", class: "btn btn-success" %>
  <%= link_to "Edit User Profile" , edit_user_path(current_user.id.to_s), class: "btn btn-success" %>
        <hr>

          <% @targets.each do |t| %>
          <div class="row index-list">
            <%= link_to t.first + " " + t.last, edit_target_path(t.id.to_s) %>
            <%= link_to "", delete_target_path(t), method: :delete, class: "glyphicon glyphicon-trash", data: {confirm: 'Are you sure you want to delete this target?'}  %>
            </div>
          <% end %>
        </hr>
      </div>
    </div>
  </div>
</section>
