<div class="row">
<div class="large-12 columns friends">
<section>
  <div id="targets-index">
    <div class="container-fluid">
      <br><br><br><br><br>
      <div class="col-sm-5">
        <h1 class="display-3">Friends and Family</h1>
        <%= link_to "New Friends and Family", new_target_path, class: "button secondary" %>
  <%= link_to "Edit Your Profile" , edit_user_path(current_user.id.to_s), class: "button secondary" %>
  <%if current_user.admin?  %>
      <%= link_to "Messages" , messages_path, class: "button secondary" %>
      <%= link_to "Representatives" , reps_path, class: "button secondary" %>
  <% end %>
        <hr>

          <table>
            <thead>
            <tr>
              <th width:"100">Name</th>
              <th width:"100">Status</th>
              <th width:"100">Actions</th>
            </tr>
            <tbody>
              <% @targets.each do |t| %>
            <tr>
            <td><%= link_to t.first_name + " " + t.last_name , edit_target_path(t.slug) %></td>
            <td><%=t.status%></td>
            <td><%= link_to "", delete_target_path(t), method: :delete, class: "glyphicon glyphicon-trash", data: {confirm: 'Are you sure you want to delete this Friend/Family?'}  %> <i class="fa fa-trash" aria-hidden="true"></i></td>
            </tr>
                      <% end %>
            </tbody>
            </table>

        </hr>
      </div>
    </div>
  </div>
</section>
</div>
</div>
