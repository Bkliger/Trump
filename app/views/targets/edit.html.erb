<div class="target-edit">
  <div class = "col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <div>
      <h2>Edit target</h2>
    </div>


    <div class = "row top-spacer">
          <%= form_for(@target, :url => {:action => 'update', :id => @target.id}) do |f| %>

            <div class = "row">
              <%= f.label :first_name %>
              <%= f.text_field :first, placeholder: "First Name", class: "form-control" %>
            </div>
            <div class = "row">
                <%= f.label :last_name %>
              <%= f.text_field :last, placeholder: "Last Name", class: "form-control top-spacer" %>
            </div>
            <div>
                <%= f.label :zip_code %>
              <%= f.text_field :zip, placeholder: "Zip Code" %>
            </div>
            <div>
              <%= f.label :zip_code_plus_4 %>
              <%= f.text_field :plus4, placeholder: "Zip Plus 4" %>
            </div>
            <div>
                <%= f.label :salutation %>
              <%= f.text_field :salutation, placeholder: "Salutation" %>
            </div>
            <div>
              <%= f.label :email %>
              <%= f.text_field :email, placeholder: "email" %>
            </div>
            <div>
              <%= f.label :receive_email? %>
              <%= f.check_box :rec_email, placeholder: "email" %>
            </div>
            <div>
              <%= f.label :receive_text? %>
              <%= f.check_box :rec_text, placeholder: "text" %>
            </div>
            <div>
                <%= f.label :cell_phone %>
              <%= f.text_field :phone, placeholder: "Cell Phone" %>
            </div>
            <!-- To be hidden in actual form -->
            <div class=hidden>
              <%= f.text_field :user_id, placeholder: "user id" %>
            </div>
            <div>
              <%= f.submit "Edit target", class: "btn btn-primary btn-lg top-spacer" %>
            </div>

          <% end %>
        </div>

  </div>
</div>
