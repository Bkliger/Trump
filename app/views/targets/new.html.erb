<p class="current_step">Step 1. Add/Change Information<span class="not_current_step">>>>Step 2. Check Representatives</span></p>
<h1>Add/Change Friends and Family</h1>
<%= form_for @target do |f| %>
<div>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, placeholder: "First Name" %>
  <span class="glyphicon glyphicon-star asterisk"></span>
</div>
<div>
    <%= f.label :last_name %>
  <%= f.text_field :last_name, placeholder: "Last Name" %>
    <span class="glyphicon glyphicon-star asterisk"></span>
</div>
<div>
    <%= f.label :state %>
  <%= f.select(:state, options_for_select(us_states), {:include_blank => 'Select State'}) %>
      <span class="glyphicon glyphicon-star asterisk"></span>
</div>
<div>
    <%= f.label :address %>
  <%= f.text_field :address, placeholder: "Address" %>
</div>
<div>
    <%= f.label :city %>
  <%= f.text_field :city, placeholder: "City" %>
</div>
<div>
    <%= f.label :zip_code %>
  <%= f.text_field :zip, placeholder: "Zip Code" %>
</div>


<!-- To be hidden in actual form -->
<div class=hidden>
  <%= f.text_field :user_id, value: current_user.id, placeholder: "user id" %>
</div>
<div>
<%= link_to "Cancel", targets_path, class: "btn btn-success" %>
<%= f.submit "Next", class: "btn btn-success" %>
</div
<% end %>

<br>
<br>
  <span class="glyphicon glyphicon-star asterisk"></span>
    <span class="asterisk">= Required</span>
