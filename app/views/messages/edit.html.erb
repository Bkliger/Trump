<div class="message-edit">
  <div class = "col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <div>
      <h2>Edit Message</h2>
    </div>


    <div class = "row top-spacer">
          <%= form_for(@message, :url => {:action => 'update', :id => @message.id}) do |f| %>

            <div class = "row">
              <%= f.text_field :title, placeholder: "Message Title", class: "form-control" %>
            </div>
            <div class = "row">
              <%= f.text_field :message_text, placeholder: "Message Text", class: "form-control top-spacer" %>
            </div>
            <div>
              <%= f.submit "Edit Message", class: "btn btn-primary btn-lg top-spacer" %>
            </div>

          <% end %>
        </div>
      <div>
        <%= link_to "Send Message",  send_message_path(@message)%>
      </div>

  </div>
</div>
