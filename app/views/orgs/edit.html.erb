<div class="rep-edit">
  <div class = "col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <div>
      <h2>Edit Organization Information</h2>
    </div>


    <div class = "row top-spacer">
      <%= form_for(@org, :url => {:action => 'update', :id => @org.id}) do |f| %>

        <div class = "row">
          <%= f.text_field :org_name, placeholder: "Organization Name", class: "form-control" %>
        </div>
        <div class = "row">
          <%= f.text_field :org_status, placeholder: "Organization Status", class: "form-control top-spacer" %>
        </div>
        <div class = "row">
          <%= f.text_area :hot_message, placeholder: "Hot Message", class: "form-control top-spacer" %>
        </div>
        <div>
          <%= f.submit "Edit Organization Information", class: "button success"  %>
        </div>

          <% end %>
          <div>
    </div>

  </div>
</div>
