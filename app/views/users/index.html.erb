<section>
  <div id="users-index">
    <div class="container-fluid">
      <br><br><br><br><br>
      <div class="col-sm-5">
        <h1 class="display-3">Users</h1>
        <%= link_to "Messages", messages_path, class: "btn btn-success"%>
        <hr>
          <% @users.each do |u| %>
          <div class="row index-list">
            <%= link_to u.first_name + " " + u.last_name + " " + u.enrollment.to_s, edit_user_path(u.id.to_s) %>
            <%= link_to "", delete_user_path(u), method: :delete, class: "glyphicon glyphicon-trash", data: {confirm: 'Are you sure you want to delete this user?'}  %>
            </div>
          <% end %>
        </hr>
      </div>
    </div>
  </div>
</section>
